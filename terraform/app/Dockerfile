# Use official Node.js image as base
FROM node:18-alpine

# Set working directory
WORKDIR /usr/src/app

# Copy application files
COPY server.js .

# Install dependencies (none in your case, but added placeholder if you extend later)
# RUN npm install

# Expose the port the app runs on
EXPOSE 3000

# Run the app
CMD ["node", "server.js"]
